@using WebMoneda4_5.ViewModels
@model ConversorIndexViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Conversor de monedas</h1>

@using (Html.BeginForm())
{
    @Html.DropDownListFor(m => m.monedaOrigen, new SelectList(Model.ListaMonedas), "Selecciona Moneda Origen")
    @Html.DropDownListFor(m => m.monedaDestino, new SelectList(Model.ListaMonedas), "Selecciona Moneda Destino")
    <input name="importe" />
    <input type="submit" name="submitButton" value="Submit" />
}



@if (!string.IsNullOrEmpty(Model.monedaOrigen))
{
    <h3>Moneda de origen seleccionada: @Model.monedaOrigen</h3>
}

@if (!string.IsNullOrEmpty(Model.monedaDestino))
{
    <h3>Moneda de destino seleccionada: @Model.monedaDestino</h3>
}

@if (!string.IsNullOrEmpty(Model.importe))
{
    <h3>Importe seleccionada: @Model.importe</h3>
}

@if (!string.IsNullOrEmpty(Model.resultado))
{
    <h3>El resultado de la conversión es el siguiente: @Model.resultado @Model.monedaDestino</h3>
}

