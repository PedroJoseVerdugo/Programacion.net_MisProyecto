
@{
    ViewData["Title"] = "Conversor";
}

<h1>Conversor de Divisas</h1>
<form asp-action="Convertir">
    <div class="form-group">
        <label for="fromCurrency">De:</label>
        <input type="text" id="fromCurrency" name="fromCurrency" required />
    </div>
    <div class="form-group">
        <label for="toCurrency">A:</label>
        <input type="text" id="toCurrency" name="toCurrency" required />
    </div>
    <div class="form-group">
        <label for="amount">Cantidad:</label>
        <input type="number" id="amount" name="amount" required />
    </div>
    <button type="submit">Convertir</button>
</form>

@if (ViewBag.Result != null)
{
    <div>
        <h2>Resultado: @ViewBag.Result</h2>
    </div>
}
