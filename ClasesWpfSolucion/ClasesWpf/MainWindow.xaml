<Window x:Class="ClasesWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClasesWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1000">
    <Grid>


        <StackPanel>
            <Label>Pregunta 1: ¿Cuál es tu equipo de fútbol favorito?</Label>
            <TextBox x:Name="Equipo1TextBox"/>

            <Label>Pregunta 2: ¿Quién es tu jugador favorito?</Label>
            <TextBox x:Name="Equipo2TextBox"/>

            <Label>Pregunta 3: ¿Cuál es el mejor equipo de la historia?</Label>
            <TextBox x:Name="Equipo3TextBox"/>

            <Button Content="Enviar Respuestas" Click="EnviarRespuestas_Click"/>
        </StackPanel>
        <ListView HorizontalAlignment="Left" Height="216" Margin="314,238,0,0" VerticalAlignment="Top" Width="320" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Button" HorizontalAlignment="Left" Margin="314,174,0,0" VerticalAlignment="Top" Height="42" Width="128"/>


    </Grid>
</Window>
